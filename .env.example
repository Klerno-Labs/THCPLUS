# =============================================================================
# ENVIRONMENT VARIABLES - THC Plus
# =============================================================================
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE (Vercel Postgres)
# =============================================================================
# Get these from: https://vercel.com/dashboard -> Storage -> Postgres
POSTGRES_PRISMA_URL="postgresql://user:password@host:5432/database?pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host:5432/database"

# =============================================================================
# EMAIL (Resend)
# =============================================================================
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxx"
RESEND_FROM_EMAIL="info@3rdcoastsmokecompany.com"

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_URL="https://thcplus.vercel.app"
NODE_ENV="production"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars"
NEXTAUTH_URL="https://thcplus.vercel.app"

# Admin credentials (for initial setup only - change after first login)
ADMIN_EMAIL="admin@3rdcoastsmokecompany.com"
ADMIN_PASSWORD="change-me-after-first-login"

# =============================================================================
# ERROR TRACKING (Sentry)
# =============================================================================
# Get from: https://sentry.io/settings/projects/
SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"
SENTRY_AUTH_TOKEN="sntrys_xxxxxxxxxxxxxxxxxxxx"
SENTRY_ORG="your-org-name"
SENTRY_PROJECT="your-project-name"

# =============================================================================
# RATE LIMITING (Upstash Redis)
# =============================================================================
# Get these from: https://console.upstash.com/redis
# Free tier: 10,000 commands/day
UPSTASH_REDIS_REST_URL="https://xxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="AXXXXXXxxxxxxxxxxxxxxxxxxxxxXXXXXXX"

# =============================================================================
# RECAPTCHA (Google reCAPTCHA v3)
# =============================================================================
# Get from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="6LeXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
RECAPTCHA_SECRET_KEY="6LeXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# =============================================================================
# ANALYTICS (Google Analytics 4)
# =============================================================================
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# =============================================================================
# SQUARE INTEGRATION (Optional)
# =============================================================================
# Get these from: https://developer.squareup.com/apps
# Required for syncing coupons to Square POS and tracking redemptions
# SQUARE_ENVIRONMENT options: "sandbox" or "production"
SQUARE_ACCESS_TOKEN="EAAAEXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXxxx"
SQUARE_LOCATION_ID="LXXXXXXXXXXXXX"
SQUARE_ENVIRONMENT="sandbox"
# Webhook signature key (for verifying Square webhook events)
SQUARE_WEBHOOK_SIGNATURE_KEY="your-webhook-signature-key"

# =============================================================================
# VERCEL (Automatic - don't set these manually)
# =============================================================================
# VERCEL_URL - Automatically set by Vercel
# VERCEL_ENV - Automatically set by Vercel (production, preview, development)
