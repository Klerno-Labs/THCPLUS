generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

/// Age verification log for legal compliance
/// Stores all verification attempts with IP and timestamp for audit trail
model AgeVerification {
  id         String   @id @default(cuid())
  sessionId  String   @unique
  ipAddress  String // Hashed for privacy
  userAgent  String
  verifiedAt DateTime @default(now())
  expiresAt  DateTime // 24-hour expiry
  createdAt  DateTime @default(now())

  @@index([sessionId])
  @@index([ipAddress])
  @@index([verifiedAt])
  @@map("age_verifications")
}

/// Contact form submissions
/// Stores all contact inquiries from website visitors
model ContactSubmission {
  id          String    @id @default(cuid())
  name        String
  email       String
  message     String    @db.Text
  ipAddress   String
  userAgent   String
  submittedAt DateTime  @default(now())
  status      String    @default("new") // new, read, replied
  notes       String?   @db.Text // Admin notes
  repliedAt   DateTime?
  repliedBy   String?

  @@index([status])
  @@index([submittedAt])
  @@index([email])
  @@map("contact_submissions")
}

/// Admin users for dashboard access
/// Credential-based authentication with bcrypt password hashing
model Admin {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String
  role         String    @default("admin") // admin, super_admin
  createdAt    DateTime  @default(now())
  lastLoginAt  DateTime?
  isActive     Boolean   @default(true)

  @@index([email])
  @@map("admins")
}

/// Coupons for in-store promotions
/// Supports percentage and fixed amount discounts
model Coupon {
  id                 String    @id @default(cuid())
  code               String    @unique
  description        String
  type               String // 'percentage' | 'fixed'
  value              Float // Percentage (0-100) or fixed dollar amount
  minPurchase        Float? // Minimum purchase amount required
  maxUses            Int? // Maximum total uses (null = unlimited)
  usesCount          Int       @default(0)
  maxUsesPerCustomer Int? // Maximum uses per customer (null = unlimited)
  startsAt           DateTime
  expiresAt          DateTime?
  isActive           Boolean   @default(true)
  createdBy          String // Admin ID
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  // Square integration fields
  squareDiscountId String? // Square Discount ID for syncing
  squareSynced     Boolean   @default(false) // Whether synced to Square
  squareSyncedAt   DateTime? // Last sync time
  squareVersion    Int? // Square object version for updates

  redemptions CouponRedemption[]

  @@index([code])
  @@index([isActive])
  @@index([expiresAt])
  @@index([squareDiscountId])
  @@map("coupons")
}

/// Tracks coupon redemptions
model CouponRedemption {
  id             String   @id @default(cuid())
  couponId       String
  coupon         Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  customerEmail  String? // Optional: track customer if provided
  customerPhone  String? // Optional: track customer if provided
  discountAmount Float // Actual discount applied
  orderTotal     Float // Total order amount before discount
  redeemedAt     DateTime @default(now())

  @@index([couponId])
  @@index([customerEmail])
  @@index([redeemedAt])
  @@map("coupon_redemptions")
}

/// Global application settings
/// Stores configuration for Square integration, store info, notifications, social media, and SEO
model Settings {
  id String @id @default(cuid())

  // Square Integration Settings
  squareAccessToken         String?
  squareLocationId          String?
  squareEnvironment         String? // 'sandbox' | 'production'
  squareWebhookSignatureKey String?
  squareAutoSync            Boolean @default(false) // Auto-sync coupons to Square
  squareSyncEnabled         Boolean @default(false) // Enable Square integration

  // Store Information
  storeName        String  @default("3rd Coast Smoke Company")
  storePhone       String  @default("(555) 123-4567")
  storeEmail       String  @default("info@3rdcoastsmokecompany.com")
  storeAddress     String  @default("123 Main St, Houston, TX 77001")
  storeHours       String  @default("{\"monday\":\"9:00 AM - 9:00 PM\",\"tuesday\":\"9:00 AM - 9:00 PM\",\"wednesday\":\"9:00 AM - 9:00 PM\",\"thursday\":\"9:00 AM - 9:00 PM\",\"friday\":\"9:00 AM - 10:00 PM\",\"saturday\":\"10:00 AM - 10:00 PM\",\"sunday\":\"10:00 AM - 8:00 PM\"}") @db.Text // JSON string
  storeDescription String? @db.Text

  // Email Notification Rules
  notifyOnNewSubmission    Boolean @default(true) // Email when new contact form submitted
  notifyOnCouponExpiry     Boolean @default(true) // Email when coupon is about to expire
  notifyOnCouponUsageLimit Boolean @default(true) // Email when coupon reaches usage limit
  notificationEmail        String  @default("admin@3rdcoastsmokecompany.com")
  notificationCcEmails     String? // Comma-separated list of CC emails
  dailyDigestEnabled       Boolean @default(false)
  weeklyReportEnabled      Boolean @default(false)
  couponExpiryWarningDays  Int     @default(7) // Days before expiry to send warning

  // Social Media Links
  facebookUrl  String?
  instagramUrl String?
  twitterUrl   String?
  linkedinUrl  String?
  youtubeUrl   String?
  tiktokUrl    String?

  // SEO Settings
  seoMetaDescription String? @db.Text
  seoKeywords        String? @db.Text // Comma-separated keywords
  seoTitle           String? // Override default page title
  ogImage            String? // Open Graph image URL
  twitterHandle      String? // @username

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}
